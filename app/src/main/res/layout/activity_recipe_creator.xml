<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeCreatorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/general_recipe_info"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_name"
            android:hint="@string/recipe_name"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mash_heading"
        android:text="@string/mash_heading"
        android:textSize="24sp"
        android:textColor="@color/textGreen"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/general_recipe_info"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View style="@style/Divider"
        app:layout_constraintTop_toBottomOf="@id/mash_heading"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/mash_ul"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_mash"
        app:layout_constraintTop_toBottomOf="@id/mash_ul"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/add_mash"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hop_heading"
        android:text="@string/hop_heading"
        android:textSize="24sp"
        android:textColor="@color/textGreen"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/add_mash"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View style="@style/Divider"
        app:layout_constraintTop_toBottomOf="@id/hop_heading"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/hop_ul"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_hop"
        app:layout_constraintTop_toBottomOf="@id/hop_ul"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/add_hop"/>
</androidx.constraintlayout.widget.ConstraintLayout>